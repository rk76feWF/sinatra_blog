<div class="row">
  <div class="col-md-3">
    <h3>@<%= @user.user_name %></h3>
  </div>
  <div class="col-md-9">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">投稿時間</th>
        </tr>
      </thead>
      <tbody>
      <% @articles.each do |article|  %>
        <tr>
          <th>
            <a href="/<%= @user.id %>/items/<%= article.id %>"><%= h(article.title) %></a>
          </th>
          <th>
            <span><%= article.created_at %></span>
          </th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
